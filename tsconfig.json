{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",

    "noEmit": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": false,
    "declarationDir": "./dist/",

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnusedLabels": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/", "./dist/", "./tests/", "./vite.config.d.ts"]
}
